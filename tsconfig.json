{
  "compilerOptions": {
    "target": "ESNext",
    "module": "esnext",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "paths": {
      "*": ["node:modules/*"]
    },
    "typeRoots": ["./node_modules/@types"]
  }
}
